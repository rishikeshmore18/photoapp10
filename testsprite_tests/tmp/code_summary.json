                          "albums": {
                            "type": "array",
                            "items": {"type": "object"}
                          },
                          "photos": {
                            "type": "array",
                            "items": {"type": "object"}
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    {
